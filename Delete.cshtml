@model GateBoys.Models.addInfo

@{
    ViewBag.Title = "Delete";
}

<div class="panel panel-danger">

    <div class="panel panel-heading">
        <h3> <span class="glyphicon glyphicon-trash"> </span>&nbsp;Are you sure you want to delete this?</h3>
    </div>
    <div class="panel panel-body">
        <div>
            <style>
                table {
                    border-collapse: collapse;
                    width: 100%;
                }

                th, td {
                    padding: 8px;
                    text-align: left;
                    border-bottom: 1px solid #ddd;
                }

                th {
                    background-color: #ff3399;
                    color: #ffffff;
                }

                tr:hover {
                    background-color: #ff3399;
                    color: #f5f5f5;
                }

                th:hover {
                    background-color: #f5f5f5;
                    color: #ff3399;
                }
            </style>

            <div class="panel-body">

                <table>
                    <tr>
                        <th>Username</th>
                        <td>    @Html.DisplayFor(model => model.addInfoOf)</td>
                    </tr>
                    <tr>
                        <th>First Name </th>
                        <td>    @Html.DisplayFor(model => model.name)</td>
                    </tr>
                    <tr>
                        <th>Middle Name</th>
                        <td>   @Html.DisplayFor(model => model.midName)</td>
                    </tr>
                    <tr>
                        <th>Surname </th>
                        <td>    @Html.DisplayFor(model => model.surname)</td>
                    </tr>

                    <tr>
                        <th> Phone Number </th>
                        <td> @Html.DisplayFor(model => model.phone)</td>
                    </tr>

                    <tr>
                        <th>ID Number </th>
                        <td>    @Html.DisplayFor(model => model.idNum)</td>
                    </tr>


                    <tr>
                        <th>Address</th>
                        <td>
                            @Html.DisplayFor(model => model.streetname)<br />
                            @Html.DisplayFor(model => model.city)<br />
                            @Html.DisplayFor(model => model.code)
                        </td>
                    </tr>


                    <tr>
                        <td></td>
                        <td></td>
                    </tr>

                </table>

            </div>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-common btn-theme" /> &nbsp; &nbsp;
                    &nbsp;@Html.ActionLink("All User Info", "Index", new { @class = "btn btn-common btn-theme" })
                </div>
            }
        </div>

    </div>
    @*<div class="panel panel-footer">

    </div>*@
</div>